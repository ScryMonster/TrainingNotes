<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/splash"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".arch.ui.splash.view.SplashActivity">

    <com.example.darkfox.trainingnotes.dto.custom.DoubleProgressView
        android:id="@+id/splashRotateLoading"
        style="@style/rotate_view"
        android:visibility="gone"
        app:anim_duration="@integer/default_anim_duration"
        app:innerColor="@color/soft_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:outerColor="@color/windows_blue"
        app:thickness="5dp" />

</androidx.constraintlayout.widget.ConstraintLayout>